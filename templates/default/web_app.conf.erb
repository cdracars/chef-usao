<VirtualHost *:80>
    DocumentRoot <%= @params[:docroot] %>
    ServerName <%= @params[:server_name] %>
    ServerAlias <%= @params[:server_aliases] %>
    RewriteEngine On
    RewriteOptions inherit
    ErrorLog /var/log/apache2/usao.error.log
    CustomLog /var/log/apache2/usao.combined.log combined
</VirtualHost>

